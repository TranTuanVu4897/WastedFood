<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller.home.SellerHomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_seller_home"
        >
        <ImageButton
            android:id="@+id/information_tab_seller"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Menu"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/item_background"
            app:srcCompat="@drawable/ic_baseline_view_headline_24"
            />
    </com.google.android.material.appbar.AppBarLayout>



    <include
        android:id="@+id/include"
        android:layout_marginTop="50dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        layout="@layout/content_main" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:id="@+id/bottom_nav_seller"
        android:theme="@style/AppThemeMaterial"
        android:layout_gravity="bottom"
        app:itemTextColor="@color/colorWhite"
        android:background="@drawable/gradient_seller_home"
        app:menu="@menu/bottom_nav_menu"
        android:layout_height="60dp">
    </com.google.android.material.bottomnavigation.BottomNavigationView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>

