<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">



    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivDetailProductIcon"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/useravatar" />

                <EditText
                    android:id="@+id/etDetailProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="Tên:"
                    android:paddingEnd="50dp"
                    android:textColorHint="#B6ADAD" />

                <EditText
                    android:id="@+id/etDetailProductOriginalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:layout_weight="2"
                    android:hint="Giá bình thường :"
                    android:paddingEnd="50dp"
                    android:textColorHint="#B6ADAD" />

                <EditText
                    android:id="@+id/etDetailProductSellPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="Giá sau khi giảm giá:"
                    android:paddingEnd="50dp"
                    android:textColorHint="#B6ADAD" />

                <EditText
                    android:id="@+id/etDetailProductOpenTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etQuantity"
                    android:inputType="datetime"
                    android:hint ="Thời gian bán"
                    android:padding="10dp"
                    />

                <EditText
                    android:id="@+id/etDetailProductCloseTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etQuantity"
                    android:inputType="datetime"
                    android:padding="10dp"
                    android:hint ="Thời gian đóng " />

                <EditText
                    android:id="@+id/etDetailProductSaleDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etQuantity"
                    android:inputType="datetime"
                    android:padding="10dp"
                    android:hint="Ngày bán" />

                <Button
                    android:id="@+id/btnDetailProductAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thay đổi" />


            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.drawerlayout.widget.DrawerLayout>