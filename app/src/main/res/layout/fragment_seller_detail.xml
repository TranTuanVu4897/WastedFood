<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:id="@+id/ivPhotoSellerFSD"
                    android:layout_width="match_parent"
                    android:layout_height="170dp" />

                <TextView
                    android:id="@+id/tvNameSellerFSD"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Name Seller"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <TextView
                        android:id="@+id/tvAddressFSD"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvDescriptionFSD"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:text="asdjasdahsjkdhashdjashjdhaskasdasdkjaskjdasjdklja"
                    android:textSize="18dp" />



                <Button
                    android:id="@+id/btnReportFSD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Báo cáo"/>

            </LinearLayout>


    </ScrollView>
</FrameLayout>