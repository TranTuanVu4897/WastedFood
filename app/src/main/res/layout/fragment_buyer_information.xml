<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentBuyer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivBuyerAvatarFIB"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_weight="2"
                app:srcCompat="@drawable/useravatar" />

            <TextView
                android:id="@+id/tvBuyerNameFIB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Tên:"
                android:paddingEnd="50dp"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/tvGenBuyerFIB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Giới tính:"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="20dp"/>


            <TextView
                android:id="@+id/tvPhoneFIB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Phone"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:paddingEnd="50dp"
                android:textColorHint="#B6ADAD"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/tvDobFIB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Ngày sinh"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:inputType=""
                android:paddingEnd="50dp"
                android:textColorHint="#B6ADAD"
                android:layout_marginBottom="30dp"/>
            <TextView
                android:id="@+id/tvEmailFIB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Email"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:inputType=""
                android:paddingEnd="50dp"
                android:textColorHint="#B6ADAD"
                android:layout_marginBottom="30dp"/>

            <Button
                android:id="@+id/btnEditInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thay đổi" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>