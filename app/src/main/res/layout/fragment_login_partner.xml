<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentPartner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etSdtPartnerFLP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:drawableLeft="@drawable/user"
                android:hint="Tên đăn nhập"
                android:paddingEnd="50dp"
                android:textColorHint="#B6ADAD" />

            <EditText
                android:id="@+id/etPassPartnerFLP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:drawableLeft="@drawable/padlock"
                android:hint="Mật Khẩu"
                android:inputType="textPassword"
                android:paddingEnd="50dp"
                android:textColorHint="#B6ADAD" />

            <Button
                android:id="@+id/btnSignInPartnerFLP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#2FFF00"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:text="Đăng nhập"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/tvForgotPassPartnerFLP"
                style="text-decoration: underline;"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="Quên mật khẩu" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnBuyerOptionFLP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Buyer"
            android:background="#4CAF50"/>

        <Button
            android:id="@+id/btnPartnerOptionFLP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Partner"
            android:background="#72DC4B"/>

    </LinearLayout>

</LinearLayout>