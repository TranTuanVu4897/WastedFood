<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:contentDescription="@string/product"
                android:id="@+id/ivProduct"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/no_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#58BE28" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.0">

            <TableRow>

                <TextView
                    android:text="10%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/button_filter" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPriceDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20,000 VND"
                        android:textAlignment="center"
                        android:textColor="#33C600"
                        android:textSize="24sp" />


                    <TextView
                        android:id="@+id/tvPriceOriginal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:foreground="@drawable/strike_through"
                        android:text="40,000 VND"
                        android:textAlignment="center" />

                </LinearLayout>
            </TableRow>

            <TableRow>

                <ImageView
                    android:contentDescription="Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_icons8_clock" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvOpenTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="14.00 - 16.00"
                        android:textAlignment="textStart"
                        android:textSize="24sp" />
                </LinearLayout>
            </TableRow>

            <TableRow>

                <ImageView
                    android:contentDescription="Direct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/location" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDirect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:maxWidth="250dp"
                        android:text="KM29, Thạch thất hòa lạc"
                        android:textAlignment="textStart"
                        android:textColor="#0E9EEF"
                        android:textSize="24sp" />
                </LinearLayout>
            </TableRow>

            <TableRow>

                <ImageView
                    android:contentDescription="Direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_distance" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:maxWidth="250dp"
                        android:text="4,1 KM"
                        android:textAlignment="textStart"
                        android:textSize="24sp" />
                </LinearLayout>
            </TableRow>

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Còn 100 / 100"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:maxWidth="300dp"
                android:text="Một vài dòng mô tả của cửa hàng"
                android:textAlignment="center"
                android:textSize="20sp" />
        </TableLayout>

        <Button
            android:id="@+id/btnDecrease"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="-"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.295"
            app:layout_constraintStart_toStartOf="@+id/tableLayout"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:text="@string/order"
            style="@style/redButton"
            app:layout_constraintBottom_toBottomOf="@+id/btnDecrease"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.589"
            app:layout_constraintStart_toEndOf="@+id/btnDecrease"
            app:layout_constraintTop_toTopOf="@+id/btnDecrease"
            app:layout_constraintVertical_bias="0.6" />

        <Button
            android:id="@+id/btnIncrease"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="+"
            app:layout_constraintBottom_toBottomOf="@+id/btnDecrease"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tvBuyQuantity"
            app:layout_constraintTop_toTopOf="@+id/btnDecrease"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvBuyQuantity"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="1"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnDecrease"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btnDecrease"
            app:layout_constraintTop_toTopOf="@+id/btnDecrease"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="SỐ LƯỢNG"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnDecrease"
            app:layout_constraintEnd_toStartOf="@+id/btnDecrease"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnDecrease"
            app:layout_constraintVertical_bias="0.375" />

        <ImageButton
            android:contentDescription="Seller"
            android:id="@+id/iBtnFollow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/not_followed"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="1.0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civSeller"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/user"
            app:civ_border_color="@color/colorBlack"
            app:civ_fill_color="@color/whiteTextColor"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/iBtnFollow"
            app:layout_constraintEnd_toEndOf="@+id/iBtnFollow"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iBtnFollow"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>