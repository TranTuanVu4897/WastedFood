<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller.AddProductActivity">

    <!--Toolbar-->


    <!--FromToInputData-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/productIconIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_launcher_background"/>
        <EditText
            android:id="@+id/editTextName"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productIconIv"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:text="Name" />
        <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextName"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:text="1" />
        <EditText
            android:id="@+id/editTextDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextPrice"
            android:inputType="number"
            android:padding="10dp"
            android:text="1" />
        <EditText
            android:id="@+id/editTextQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextDiscount"
            android:inputType="number"
            android:padding="10dp"
            android:text="1" />
        <EditText
            android:id="@+id/editTextOpenDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextQuantity"
            android:inputType="datetime"
            android:padding="10dp"
            android:text="Open date" />
        <EditText
            android:id="@+id/editTextCloseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextOpenDate"
            android:inputType="date"
            android:padding="10dp"
            android:text="Close date" />

        <Button
            android:id="@+id/btnAddProduct"
            android:layout_centerInParent="true"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:textSize="18sp"
            android:layout_below="@id/editTextCloseDate"
            android:text="Add Product" />

    </RelativeLayout>




</LinearLayout>