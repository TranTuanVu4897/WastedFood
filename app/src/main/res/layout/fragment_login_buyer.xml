<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentBuyer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/gradient_seller_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="50dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:src="@drawable/ic_launcher_background"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Hoặc"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/etSdtBuyerFLB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:drawableLeft="@drawable/iphone"
                android:hint="SDT"
                android:paddingEnd="50dp"
                android:textColorHint="#B6ADAD" />

            <EditText
                android:id="@+id/etPassBuyerFLB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:drawableLeft="@drawable/padlock"
                android:hint="Mật Khẩu"
                android:inputType="textPassword"
                android:paddingEnd="50dp"
                android:textColorHint="#B6ADAD" />

            <Button
                android:id="@+id/btnSignInBuyerFLB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#2FFF00"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:text="Đăng nhập"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnGoogleSignInFLB"
            style="@style/com_facebook_button_like"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:paddingRight="40dp"
            android:background="#f00"
            android:drawableLeft="@drawable/googleplus3"
            android:text="Continue with Google"
            android:textColor="#FDF8F8" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btnFacebookSignInFLB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnBuyerOptionFLB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Mua hàng"
            android:background="#87B675"/>

        <Button
            android:id="@+id/btnPartnerOptionFLB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Bán Hàng"
            android:background="#4CAF50"/>

    </LinearLayout>

</LinearLayout>