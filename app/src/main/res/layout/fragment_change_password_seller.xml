<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:context=".seller.sellerFragment.ChangePasswordSellerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText_change_password_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_weight="2"
                android:hint="Mật khẩu hiện tại:"
                android:textColorHint="#B6ADAD" />

            <EditText
                android:id="@+id/editText_change_password_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_weight="2"
                android:hint="Mật khẩu mới:"
                android:textColorHint="#B6ADAD" />

            <EditText
                android:id="@+id/editText_change_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_weight="2"
                android:hint="Xác nhận mật khẩu:"
                android:textColorHint="#B6ADAD" />

            <Button
                android:id="@+id/btn_change_password_seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thay đổi mật khẩu" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>